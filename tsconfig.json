{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true
  },
  "include": [
    "src/index.ts",
    "src/**/*"
  ]
}
